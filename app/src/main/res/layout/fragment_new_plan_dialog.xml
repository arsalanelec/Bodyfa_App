<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".dialog.NewPlanDialog"
    android:layout_margin="16dp"
    android:background="@android:color/white"
    >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="برنامه جدید"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="نوع برنامه:" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <RadioButton
            android:id="@+id/rbMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="برنامه غذایی"
                 />


        <RadioButton
            android:id="@+id/rbWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="برنامه ورزشی"
                   />

    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="عنوان برنامه:" />

    <EditText
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="یک نام برای برنامه وارد نمایید..."
        android:inputType="text"
        android:lines="1"
        android:maxLength="64"
       />

    <Button
        android:id="@+id/btnCreatPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="ایجاد"
        android:textColor="@android:color/white"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:layout_gravity="left"
        android:layout_margin="16dp"
        />

</LinearLayout>